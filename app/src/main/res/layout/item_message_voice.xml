<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/xsmall_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/received_voice_block"
        android:layout_width="@dimen/chat_message_image_size"
        android:layout_height="@dimen/xxlarge_margin"
        android:background="@drawable/bg_received_message"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/received_voice_play"
            android:layout_width="@dimen/contacts_avatar_size"
            android:layout_height="@dimen/contacts_avatar_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/ic_play_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/received_voice_stop"
            android:layout_width="@dimen/contacts_avatar_size"
            android:layout_height="@dimen/contacts_avatar_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/ic_stop_circle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/received_voice_time"
            style="@style/secondaryText.12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/xsmall_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="21:45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sent_voice_block"
        android:layout_width="@dimen/chat_message_image_size"
        android:layout_height="@dimen/xxlarge_margin"
        android:background="@drawable/bg_sent_message"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/sent_voice_play"
            android:layout_width="@dimen/contacts_avatar_size"
            android:layout_height="@dimen/contacts_avatar_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/ic_play_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sent_voice_stop"
            android:layout_width="@dimen/contacts_avatar_size"
            android:layout_height="@dimen/contacts_avatar_size"
            android:layout_marginStart="@dimen/small_margin"
            android:src="@drawable/ic_stop_circle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sent_voice_time"
            style="@style/secondaryText.12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/xsmall_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="21:45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>